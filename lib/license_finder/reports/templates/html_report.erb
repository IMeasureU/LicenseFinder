<html lang="en">
<head>
  <style>
	.dep {
	  max-width: 800px;
	  display: block;
	  border-bottom: lightgray 1px solid;
	}
	.dep p:last-child {
	  float: right;
	}
	.dep p {
	  margin: 10px;
	  display: inline-block;
	}
	.dep .depName {
	  font-size: 120%;
	  font-style: bold;
	}
	.dep .depLink {
	  font-size: 75%;
	  font-style: italic;
	}
</style>
</head>
<body>
<div class="container">
  <h2><%= project_name %></h2>
  <% sorted_dependencies.each do |dependency| -%>
    <div id="<%= dependency.name %>" class="dep">
      <p class="depName"><%= dependency_name(dependency) %></p>
      <p class="depVersion"><%= version_groups(dependency) %></p>
      <p class="depLink"><%= link_to_dependency(dependency) %></p>
      <p class="depLicence"><%= license_links(dependency) %></p>
    </div>
  <% end -%>
</div>
</body>
</html>
